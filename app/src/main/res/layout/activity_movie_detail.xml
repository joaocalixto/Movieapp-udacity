<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.exemple.android.movieapp.MovieDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_title"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:paddingTop="40dp"
            android:id="@+id/tv_movie_title"
            android:paddingLeft="20dp"
            android:text="Guardioes da Galaxia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="32sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"
        android:id="@+id/img_mini_poster"
        android:layout_below="@+id/ll_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_mini_poster"
        android:layout_toRightOf="@+id/img_mini_poster"
        android:layout_toEndOf="@+id/img_mini_poster"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/tv_movie_year"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:text="120min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_duration"
        android:textSize="14sp"
        android:layout_below="@+id/tv_movie_year"
        android:layout_alignLeft="@+id/tv_movie_year"
        android:layout_alignStart="@+id/tv_movie_year" />

    <TextView
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_mini_poster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/tv_movie_overview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="8.1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie_duration"
        android:layout_alignLeft="@+id/tv_movie_duration"
        android:layout_alignStart="@+id/tv_movie_duration"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_movie_average" />

</RelativeLayout>
